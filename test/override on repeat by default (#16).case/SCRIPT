RUN ../args-test --undefined=x --undefined=y
EXPECT "-------- NAMED:
undefined = y
-------- POSITIONAL:
"

RUN ../args-test --undefined=x junk --undefined=y
EXPECT "-------- NAMED:
undefined = y
-------- POSITIONAL:
junk
"

RUN ../args-test --take-two=1 2 junk --take-two=a b
EXPECT "-------- NAMED:
take-two = a, b
-------- POSITIONAL:
junk
"

#--------------------------------------------------
# Also try appending (Args::RepeatAppends)...
#--------------------------------------------------
alt="$CASE"
RUN "$alt" --take-two=1 2 junk --take-two=a b

EXPECT "-------- NAMED:
take-two = 1, 2, a, b
-------- POSITIONAL:
junk
"
